<Page x:Class="UP_2024.pages.reg_page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UP_2024.pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1300"
      Title="reg_page">

    <Grid Background="White">

        <Border Width="350" Height="250" CornerRadius="20" Background="#FFFEF9DE">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock  Style="{StaticResource TextStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,20">Регистрация</TextBlock>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 4">
                    <TextBlock Style="{StaticResource TextStyle}" >Логин</TextBlock>
                    <TextBox Style="{StaticResource TbStyle}" x:Name="LoginTbx" Width="200" Margin="5 0"></TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 4">
                    <TextBlock Style="{StaticResource TextStyle}" >Пароль</TextBlock>
                    <PasswordBox x:Name="PassTbx" Width="200" Margin="5 0"></PasswordBox>
                </StackPanel>

                    <Button Background="#FFF3CC8D" Style="{StaticResource ButtonStyle}" x:Name="RegButt" Width="200" Margin="5,5,5,0" Click="RegButt_Click">Зарегестрироваться</Button>

                <TextBlock FontFamily="Century Gothic" HorizontalAlignment="Center" Margin="0,5,0,0"><Hyperlink Foreground="#FFBB0C07" Click="Hyperlink_Click">Авторизация!</Hyperlink></TextBlock>

            </StackPanel>
        </Border>

    </Grid>
</Page>
